{
	"manifest_version": 2,
	"name": "Youtube Live Scheduler",
	"short_name": "Live Schedule",
	"version": "1.0.2",
	"description": "Youtubeライブの開始時刻を記録し、開始までの残り時間を通知します。",
	"icons": {
		"16": "icon/icon-16.png",
		"48": "icon/icon-48.png",
		"128": "icon/icon-128.png"
		},
	"browser_action": {
		"default_icon": {
			"19": "icon/icon-48.png"},
		"default_popup": "popup.html"
	},
	 "background": {
     "scripts": [
     	"js/background.js"
        ]
    },
    "options_ui": {
    "page": "options.html",
    "chrome_style" : true
    },
  "permissions": [
    "tabs",
    "storage",
    "background",
    "alarms",
    "notifications"
  ]
}